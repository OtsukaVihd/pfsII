{
  "openapi": "3.0.0",
  "info": {
    "title": "API",
    "description": "Programação FullStack 2",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/"
    }
  ],
  "paths": {
    "/usuarios/": {
      "get": {
        "tags": [
          "Usuários"
        ],
        "summary": "Lista os usuários cadastrados",
        "description": "",
        "parameters": [
          {
            "name": "chaveapi",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      },
      "post": {
        "tags": [
          "Usuários"
        ],
        "summary": "Cria um novo usuário",
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        }
      },
      "put": {
        "tags": [
          "Usuários"
        ],
        "summary": "Atualiza um ou mais atributos dos usuários",
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/usuarios/{id}": {
      "get": {
        "tags": [
          "Usuários"
        ],
        "summary": "Obtém um usuário pelo ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/usuarios/excluir/{id}": {
      "delete": {
        "tags": [
          "Usuários"
        ],
        "summary": "Exclui um usuário pelo ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/usuarios/alterar-email/{id}": {
      "patch": {
        "tags": [
          "Usuários"
        ],
        "summary": "Altera o e-mail de um usuário",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do usuário que terá o email atualizado"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/perfil/": {
      "get": {
        "tags": [
          "Perfil"
        ],
        "summary": "Lista os perfis cadastrados",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login/autenticar/": {
      "post": {
        "tags": [
          "Login"
        ],
        "summary": "Autentica um usuário",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/loginModel"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "loginModel": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "teste@teste.com"
          },
          "senha": {
            "type": "string",
            "example": "123"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "chaveapi",
        "description": "Chave de acesso para a utilização da API"
      }
    }
  }
}